{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowArbitraryExtensions": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": [
      "ES2021.String",
      "DOM"
    ]
  }
}
